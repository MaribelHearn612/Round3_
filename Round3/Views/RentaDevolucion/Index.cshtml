@model IEnumerable<Round3.RentaDevolucion>

@{
    ViewBag.Title = "Index";
}

<h2>Renta y Devolución</h2>

<p>
    @Html.ActionLink("Crear", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Fecha del préstamo
        </th>
        <th>
            Fecha de devolución
        </th>
        <th>
            Comentario
        </th>
        <th>
         Estado del préstamo
        </th>
        <th>
            Nombre del empleado
        </th>
        <th>
            Nombre del equipo
        </th>
        <th>
            Nombre del usuario
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.fechaP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fechaD)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.comentario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.estadoPrestamo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Empleado.nombreEmpleado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Equipo.nombreEquipo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Usuario.nombreUsuario)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.noPrestamo }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.noPrestamo }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.noPrestamo })
        </td>
    </tr>
}

</table>
