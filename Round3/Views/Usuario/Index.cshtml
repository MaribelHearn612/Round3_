@model IEnumerable<Round3.Usuario>

@{
    ViewBag.Title = "Index";
}

<h2>Usuario</h2>

<p>
    @Html.ActionLink("Crear", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nombre del usuario
        </th>
        <th>
            Número de carnet 
        </th>
        <th>
            Tipo de persona
        </th>
        <th>
            Tipo de usuario
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombreUsuario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.noCarnet)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TipoPersona.nombreTipoP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TipoUsuario.nombreTipoU)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.idUsuario }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.idUsuario }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.idUsuario })
        </td>
    </tr>
}

</table>
