@model IEnumerable<Round3.Modelo>

@{
    ViewBag.Title = "Index";
}

<h2>Modelo</h2>

<p>
    @Html.ActionLink("Crear", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nombre del modelo
        </th>
        <th>
            Descripción
        </th>
        <th>
           Estado
        </th>
        <th>
           Nombre de la marca
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombreModelo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descripcionModelo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.estadoModelo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Marca.nombreMarca)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.idModelo }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.idModelo }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.idModelo })
        </td>
    </tr>
}

</table>
