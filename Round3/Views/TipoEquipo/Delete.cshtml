@model Round3.TipoEquipo

@{
    ViewBag.Title = "Delete";
}

<h2>Borrar</h2>

<h3>¿Está seguro de que desea borrar este registro?</h3>
<div>
    <h4>Tipo de Equipo</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tipo de equipo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombreTE)
        </dd>

        <dt>
            Descripción
        </dt>

        <dd>
            @Html.DisplayFor(model => model.descripcionTE)
        </dd>

        <dt>
           Estado
        </dt>

        <dd>
            @Html.DisplayFor(model => model.estadoTE)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Borrar" class="btn btn-default" /> |
            @Html.ActionLink("Volver", "Index")
        </div>
    }
</div>
