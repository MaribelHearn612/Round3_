@model IEnumerable<Round3.TipoEquipo>

@{
    ViewBag.Title = "Index";
}

<h2>Tipo de equipo</h2>

<p>
    @Html.ActionLink("Crear", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Tipo de equipo
        </th>
        <th>
            Descripción
        </th>
        <th>
            Estado
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombreTE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descripcionTE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.estadoTE)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.idTE }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.idTE }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.idTE })
        </td>
    </tr>
}

</table>
